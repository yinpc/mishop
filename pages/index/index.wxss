.search {
  height: 100rpx;
  /* border-radius: 20px;
  border: 1px solid #bebebe; */
  border-bottom: 1px solid #eee;
  background-color: #f7f7f7;
  display: flex;
  justify-content: center; 
  flex-direction: column;  
}

.search-box {
  height: 65rpx;
  background-color: #fff;
  border-radius: 100rpx;
  margin: 0 25rpx;
  border: 1px solid #eee;
  line-height: 65rpx;
  text-align: center;
}

.search-box-image {
  width: 24rpx;
  height: 24rpx;
  margin: 0 10rpx;
  margin-bottom: -2rpx;
  color: #eee;
}

swiper {
  height: 150px;
}

.swiper-item {
  display: block;
  height: 150px;
  width: 100%;
}

.page-section {
  width: 100%;
  margin: 30rpx 0 0 0;
  background-color: #fff;
}

.withtop {
  /* margin: 160rpx 0 0 0; */
  margin: 100rpx 0 0 0;
}

.page-items {
  display: flex;
  border-top: 1rpx solid #eee;
}

.page-title {
  height: 80rpx;
  line-height: 80rpx;
  font-size: 35rpx;
  text-align: center;
}

.page-title-img {
  width: 35rpx;
  height: 35rpx;
  margin: 0 0 -3rpx 15rpx;
}

.item-left {
  width: 50%;
  height: 300rpx;
  float: left;
  border-right: 1px solid #eee;
  border-bottom: 1rpx solid #eee;
  position: relative;
}

.item-right {
  width: 50%;
  height: 300rpx;
  float: left;
  border-bottom: 1px solid #eee;
  position: relative;
}

.item-right-img {
  width: 220rpx;
  height: 220rpx;
  position: absolute;
  right: 20rpx;
  bottom: 10rpx;
  z-index: 1;
}

.item-name {
  position: relative;
  font-size: 30rpx;
  color: #4f4f4f;
  display: block;
  margin: 10rpx 20rpx;
  z-index: 10;
}

.item-intro {
  position: relative;
  font-size: 24rpx;
  color: #b8b8b8;
  display: block;
  margin: 10rpx 20rpx;
  z-index: 10;
}

.item-price {
  position: relative;
  font-size: 30rpx;
  color: #c00000;
  display: block;
  margin: 10rpx 20rpx;
  z-index: 10;
}

.item-price-old {
  position: relative;
  font-size: 24rpx;
  color: #b8b8b8;
  display: block;
  margin: 10rpx 20rpx;
  text-decoration: line-through;
  z-index: 10;
}

.item-intro-tag {
  position: relative;
  font-size: 24rpx;
  height: 24rpx;
  line-height: 24rpx;
  margin: 0 20rpx;
  padding: 0 12rpx;
  background-color: #c00000;
  color: #fff;
  border-radius: 5rpx;
  z-index: 10;
}

.nowrap-text {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}