/* pages/search/search.wxss */

.header {
  width: 100%;
  height: 100rpx;
  color: #4f4f4f;
  font-size: 30rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.search-input {
  /* position: absolute;
  left: 25rpx; */
  margin-left: 25rpx;
  width: 620rpx;
  display: flex;
  flex-direction: row;
  border-radius: 100rpx;
  background-color: #fff;
  border: 1px solid #eee;
}

.search-input image {
  width: 24rpx;
  height: 24rpx;
  color: #eee;
  align-self: center;
  margin-left: 25rpx;
  margin-right: 15rpx;
}

.search-input input {
  height: 65rpx;
  flex: 1;
  width: 100%;
}

.header text {
  display: inline-block;
  width: calc(100% - 645rpx);
  text-align: center;
}

.history-title {
  margin: 10rpx 30rpx;
  font-size: 30rpx;
  color: #4f4f4f;
  display: block;
}

.history-items {
  margin: 25rpx 40rpx;
  font-size: 30rpx;
  color: #4f4f4f;
  display: flex;
  flex-flow: row wrap;
  transform: translateX(-20rpx);
}

.history-items view {
  height: 50rpx;
  line-height: 50rpx;
  padding: 0 20rpx;
  background-color: #fff;
  border-radius: 10rpx;
  margin: 10rpx 20rpx 10rpx 20rpx;
  border: 1px solid #eee;
}
